<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/fondopantallaondas" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:layout_gravity="center_horizontal"
            app:srcCompat="@drawable/screenshot_2" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginBottom="-20dp"
            app:srcCompat="@drawable/screenshot_1"
            android:layout_gravity="center_horizontal|bottom"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:textSize="30dp"
            android:text="@string/login_tittle"
            android:layout_marginTop="200dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="280dp"
            android:padding="40dp"
            >

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="@string/login_user_input"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                android:background="#6B2536AC"
                android:padding="10dp"
                android:layout_marginBottom="20dp"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="@string/login_pass_input"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                android:background="#6B2536AC"
                android:padding="10dp"
                android:layout_marginBottom="20dp"
                android:inputType="textPassword"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="@string/login_button_text"
                android:padding="10dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="@string/login_recover_pass"
                android:textColor="#260A7A"
                android:layout_marginTop="10dp"
                />

        </LinearLayout>
        
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>